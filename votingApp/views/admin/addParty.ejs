<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Add Party</title>
</head>

<body>
    <%- include('components/nav'); %>

        <div class="container my-5 w-50">
            <% if(locals.error){ %>
                <div class="bg-danger text-white mb-3 p-2 text-center">
                    <%= error %>
                </div>
                <% }; %>
                    <form action="/admin/add-party" method="post" enctype="multipart/form-data">
                        <input type="hidden" value="<%= userData._id %>" name="id">
                        <div class="row">
                            <div class="mb-3 col-12">
                                <label for="p_name" class="form-label">Party Name*</label>
                                <input type="text" class="form-control" id="p_name" name="p_name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-12">
                                <label for="p_motive" class="form-label">Party Motive*</label>
                                <textarea class="form-control" id="p_motive" name="p_motive"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-12">
                                <label for="p_flag" class="form-label">Party Flag*</label>
                                <input type="file" name="p_flag" id="p_flag" class="form-control">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Add Party</button>
                    </form>
        </div>
        <%- include('../components/footer'); %>
</body>

</html>