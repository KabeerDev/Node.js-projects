<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>Update Party</title>
</head>

<body>
    <%- include('components/nav'); %>
        <div class="container my-5 w-50">
            <% if(locals.error){ %>
                <div class="bg-danger text-white mb-3 p-2 text-center">
                    <%= error %>
                </div>
                <% }; %>
                    <form action="/admin/add-candidate" method="post">
                        <input type="hidden" value="<%= userData._id %>" name="u_id">
                        <div class="row">
                            <div class="mb-3 col-6">
                                <label for="c_name" class="form-label">Candidate Name*</label>
                                <input type="text" class="form-control" min="25" id="c_name" name="c_name">
                            </div>
                            <div class="mb-3 col-6">
                                <label for="c_age" class="form-label">Age*</label>
                                <input type="number" class="form-control" id="c_age" name="c_age">
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-12">
                                <label for="c_party" class="form-label">Party*</label>
                                <select class="form-select" name="c_party" id="c_party"
                                    aria-label="Default select example">
                                    <% parties.forEach(party=> { %>
                                        <option selected hidden>Select Party</option>
                                        <option value="<%= party.partyName %>">
                                            <%= party.partyName.toUpperCase() %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Update
                            Party</button>
                    </form>
        </div>
        <%- include('../components/footer'); %>
</body>

</html>